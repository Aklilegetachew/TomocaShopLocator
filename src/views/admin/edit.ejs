<% /* branch object is passed here */ %>

<div class="min-h-screen bg-gray-50 pt-10 pb-12">
  <div
    class="max-w-md mx-auto bg-white rounded-xl shadow-2xl overflow-hidden p-6 sm:p-8"
  >
    <!-- Header -->
    <div class="flex items-center mb-6">
      <a
        href="/admin/branches"
        class="text-gray-500 hover:text-gray-700 transition"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"
          ></path>
        </svg>
      </a>
      <h1 class="flex-grow text-center text-xl font-bold text-gray-800">
        Edit Branch
      </h1>
    </div>

    <!-- EDIT FORM -->
    <form
      action="/api/branches/<%= branch.id %>/update"
      method="POST"
      enctype="multipart/form-data"
      class="space-y-5"
    >
      <!-- Name -->
      <div>
        <input
          type="text"
          name="name"
          placeholder="Name"
          value="<%= branch.name %>"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg"
        />
      </div>

      <!-- Address -->
      <div>
        <input
          type="text"
          name="address"
          placeholder="Address"
          value="<%= branch.address %>"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg"
        />
      </div>

      <!-- Longitude -->
      <div>
        <input
          type="text"
          name="longitude"
          placeholder="Longitude"
          value="<%= branch.longitude %>"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg"
        />
      </div>

      <!-- Latitude -->
      <div>
        <input
          type="text"
          name="latitude"
          placeholder="Latitude"
          value="<%= branch.latitude %>"
          required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg"
        />
      </div>

      <!-- Picture Upload (optional) -->
      <div class="pt-2">
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Picture
        </label>
        <div
          class="flex justify-center rounded-lg border-2 border-dashed border-gray-300 px-6 py-8 cursor-pointer hover:border-amber-400"
          onclick="document.getElementById('photo').click()"
        >
          <div class="text-center">
            <svg
              class="mx-auto h-12 w-12 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"
              ></path>
            </svg>
            <p class="mt-2 text-sm text-gray-600">
              Click to upload or drag and drop
            </p>
            <input
              id="photo"
              name="photo"
              type="file"
              class="sr-only"
              accept="image/*"
            />
          </div>
        </div>
      </div>

      <!-- Save Button -->
      <button
        type="submit"
        class="w-full py-3 mt-8 bg-amber-500 text-white font-semibold rounded-lg shadow-md hover:bg-amber-600"
      >
        Save
      </button>

      <!-- Cancel -->
      <a
        href="/admin/branches"
        class="block text-center text-gray-600 hover:text-gray-800 text-sm font-medium"
      >
        Cancel
      </a>
    </form>
  </div>
</div>
