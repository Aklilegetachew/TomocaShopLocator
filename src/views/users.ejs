<% /* Assumes 'branches' array is passed from the controller */ %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Coffee Shops</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <!-- Header -->
    <header class="bg-amber-500 text-white py-4 shadow-md">
      <h1 class="text-center text-2xl font-bold">Our Coffee Shops</h1>
    </header>

    <!-- Branches List -->
    <main class="p-4 max-w-4xl mx-auto space-y-6">
      <% if (!branches || branches.length === 0) { %>
      <div class="bg-white p-6 rounded-lg shadow text-center">
        <p class="text-gray-700">No branches available at the moment.</p>
      </div>
      <% } else { %> <% branches.forEach(branch => { %>
      <div
        class="relative w-full h-64 rounded-xl overflow-hidden shadow-lg cursor-pointer group hover:scale-105 transform transition duration-300"
        style="
          background-image: url('/uploads/<%= branch.photo %>');
          background-size: cover;
          background-position: center;
        "
      >
        <!-- Black overlay -->
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>

        <!-- Text on top -->
        <div class="absolute inset-0 flex flex-col justify-end p-6 text-white">
          <h2 class="text-xl font-bold mb-1"><%= branch.name %></h2>
          <p class="text-sm mb-3"><%= branch.address %></p>

          <!-- Get Directions Button -->
          <a
            href="https://www.google.com/maps/dir/Current+Location/<%= branch.latitude %>,<%= branch.longitude %>"
            target="_blank"
            class="inline-block px-4 py-2 bg-amber-500 text-white font-semibold rounded-lg shadow hover:bg-amber-600 transition"
          >
            Get Directions
          </a>
        </div>
      </div>
      <% }) %> <% } %>
    </main>

    <!-- Footer -->
    <footer class="mt-8 py-4 text-center text-gray-500 text-sm">
      &copy; <%= new Date().getFullYear() %> Tomoca Coffee Shop
    </footer>
  </body>
</html>
