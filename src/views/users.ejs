<% /* Assumes 'branches' array is passed from the controller */ %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Coffee Shops</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <!-- Header -->
    <nav class="bg-white shadow-md px-6 py-6 flex flex-col items-center">
      <img
        src="/public/assets/logo.jpg"
        alt="Tomoca Logo"
        class="w-20 h-20 object-cover rounded-full mb-2"
      />
      <h1 class="text-2xl font-bold text-gray-800 mb-4 text-center">
        Tomoca Shops
      </h1>
      <div class="flex space-x-6">
        <a
          href="/users/branches"
          class="text-gray-700 hover:text-amber-600 font-medium transition"
          >Branches</a
        >
        <a
          href="/users/contact"
          class="text-gray-700 hover:text-amber-600 font-medium transition"
          >Contact</a
        >
      </div>
    </nav>

    <!-- Branches List -->
    <main class="p-4 md:p-10 max-w-3xl mx-auto space-y-4">
      <% if (!branches || branches.length === 0) { %>
      <div class="bg-white p-6 rounded-lg shadow text-center">
        <p class="text-gray-700">No branches available at the moment.</p>
      </div>
      <% } else { %> <% branches.forEach(branch => { %>
      <a
        href="https://www.google.com/maps/dir/Current+Location/<%= branch.latitude %>,<%= branch.longitude %>"
        target="_blank"
        class="block relative w-full h-44 rounded-xl overflow-hidden shadow-lg cursor-pointer group hover:scale-105 transform transition duration-300"
        style="
          background-image: url('/uploads/<%= branch.photo %>');
          background-size: cover;
          background-position: center;
        "
      >
        <!-- Black overlay -->
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>

        <!-- Text on top -->
        <div class="absolute inset-0 flex flex-col justify-end p-6 text-white">
          <h2 class="text-xl font-bold mb-1"><%= branch.name %></h2>
          <p class="text-sm mb-3"><%= branch.address %></p>
        </div>
      </a>
      <% }) %> <% } %>
    </main>

    <!-- Footer -->
    <footer class="mt-8 py-4 text-center text-gray-500 text-sm">
      &copy; <%= new Date().getFullYear() %> Tomoca Coffee Shop
    </footer>
  </body>
</html>
